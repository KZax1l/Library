<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bumptech.glide.samples">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.bumptech.glide.samples.TestActivity"/>
        <activity android:name="com.bumptech.glide.samples.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.bumptech.glide.samples.contacturi.ContactUriActivity" />
        <activity android:name="com.bumptech.glide.samples.flickr.FlickrSearchActivity" />
        <activity android:name="com.bumptech.glide.samples.flickr.FullscreenActivity" />
        <activity android:name="com.bumptech.glide.samples.gallery.GalleryActivity" />
        <activity android:name="com.bumptech.glide.samples.giphy.FullscreenActivity" />
        <activity android:name="com.bumptech.glide.samples.giphy.GiphyActivity" />
        <activity android:name="com.bumptech.glide.samples.svg.SvgActivity" />
    </application>

</manifest>
